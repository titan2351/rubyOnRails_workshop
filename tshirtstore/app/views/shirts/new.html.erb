<h1>New Shirt</h1>
<%= form_for(@shirt) do |f| %>
        <%= f.label :color %><br />
        <%= f.text_field :color %><br />
        <%= f.label :size %><br />
        <%= f.text_field :size %><br />
        <%= f.label :description %><br />
        <%= f.text_area :description %><br />
        <%= f.submit %>
        <%= f.label :price %><br />
        <%= f.text_field :price %><br />
<% end %>
